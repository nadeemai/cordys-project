<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog   type="Message" contentWidth="35%" >
         
            <customHeader>
            <Toolbar>
                <ToolbarSpacer/>
                <FlexBox direction="Row" alignItems="Start" justifyContent="Start">
                    <!-- <Text text="Remarks" class="remarksdatacss"  required="true" /> -->
                    <Label text="Remarks" class="remarksdatacss" required="true"  />
                </FlexBox>
                <ToolbarSpacer/>
            </Toolbar>
        </customHeader>

        <content>
             <VBox>
           
                <TextArea
                    id="RemarkInput"
                    placeholder=""
                    liveChange="handleRemarkChangeLimit4000"
                    value="{viewenableddatacheck>/remarkModel}"
                    width="95%"
                    height="120px"
                    maxLength="4000"
                     required="true"
                    showExceededText="true"
                     valueLiveUpdate="true"
 
                />
            </VBox>
 
        </content>
        <buttons>
 
        <!-- <Button text="Submit" type="Accept" press="onSubmitReamrksData"  visible="{viewenableddatacheck>/enableRowActions}"/> -->
        <Button id="submitremark" text="Submit" type="Accept" press="onSubmitReamrksData"  visible="{viewenableddatacheck>/enableRowActions}"/>
    
        <Button id="approverremark" text="Approve" type="Accept" press="onApprovedData" visible="false"/>
        <Button id="Approverremark2" text="Approve" type="Accept" press="onApprovedData" visible="{viewenableddatacheck>/approvebuttonvisiblityData}"/>
         <Button id="ReleaseDatacheck" text="Release" type="Emphasized" press="onRelesedDatacheck" visible="{viewenableddatacheck>/relesedatabuttonvisiblity}"/>

        <Button id="Rejectremark" text="Reject" type="Accept" press="onRejectData" visible="false"/>
        <Button id="Sendremark" text="Send Back" type="Accept" press="onSendbackData" visible="{viewenableddatacheck>/sendbackbuttonvisiblity}"/>
        <Button id="Cancelremark" text="Cancel" type="Reject" press="onCloseReamrksFrag" />

        </buttons>
    </Dialog>
</core:FragmentDefinition>
